-- select data from a table 

SELECT first_name, last_name 
FROM workers;


-- another way 

SELECT last_name, first_name
FROM workers;

-- find specific id using a clause " WHERE " 

SELECT *
FROM workers
WHERE employee_id = 5;


-- find some data using name 

SELECT * 
FROM workers
WHERE first_name = "ahm";


-- conditional finding 

SELECT * 
FROM workers
WHERE hourly_pay >= 15;



-- date conditional 

SELECT * 
FROM workers
WHERE hire_date <= "2023-01-02";


-- not equal to 

SELECT *
FROM workers
WHERE employee_id != 1;


-- TO FIND NULL DATA 

SELECT *
FROM workers
WHERE hire_date IS NULL;


